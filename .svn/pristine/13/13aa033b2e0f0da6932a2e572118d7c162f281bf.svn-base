	public double getValorTotal(){
		double valorTotal = 0;
		for (ItemCarrinho item : itensCarrinho) {
			valorTotal += item.getLivro().getValor() * item.getQuantidade();
		}
		return valorTotal;
	}
	
	public int getTotalItens(){
		int total = 0;
		for (ItemCarrinho item : itensCarrinho) {
			total += item.getQuantidade();
		}
		return total;
	}
}
